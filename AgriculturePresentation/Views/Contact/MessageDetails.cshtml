@model AgricultureEntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ContactId)
                <div class="form-group">
                    <label for="Name">Adı Soyadı</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="Name">Mail</label>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label for="Name">Tarih</label>
                    <input type="text" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="Name">Mesaj</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"> </textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <a href="/Contact/Cancel" class="btn btn-outline-info">Vazgeç</a>
            </form>
        </div>
    </div>
</div>