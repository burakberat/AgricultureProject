@model AgricultureEntityLayer.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Fotoğraf Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ImageId)
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
                <div class="form-group">
                    <label for="ImageUrl">URL</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>