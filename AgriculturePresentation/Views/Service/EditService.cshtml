@model AgricultureEntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ServiceId)
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="Image">Görsel</label>
                    <input type="text" class="form-control" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea class="form-control" rows="4" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>