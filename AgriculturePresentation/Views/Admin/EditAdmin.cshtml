@model AgricultureEntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AdminID)
                <div class="form-group">
                    <label for="Title">Kullanıcı ADı</label>
                    <input type="text" class="form-control" asp-for="Username">
                </div>
                <div class="form-group">
                    <label for="Description">Şifre</label>
                    <textarea class="form-control" rows="4" asp-for="Password"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>



