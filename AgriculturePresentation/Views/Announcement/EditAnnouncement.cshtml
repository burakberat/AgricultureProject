@model AgricultureEntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementId)
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea class="form-control" rows="4" asp-for="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="Date">Tarih</label>
                    <input type="datetime" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="Status">Durum</label>
                    <input type="" class="form-control" asp-for="Status">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

