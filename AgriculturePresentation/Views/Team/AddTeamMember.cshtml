@model AgricultureEntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddTeamMember";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Ekip Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="Name">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="Title">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="Image">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="Facebook">Facebook</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="Instagram">Instagram</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="Twitter">Twitter</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="Website">Web Sitesi</label>
                    <input type="text" class="form-control" asp-for="WebsiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>