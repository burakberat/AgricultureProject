@using AgricultureEntityLayer.Concrete
model List<Team>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Takım</h4>
                <div class="table-responsive">
                    @if (Model.Count > 0)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ID</th>
                                    <th>Ad</th>
                                    <th>Görev</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="py-1">
                                            <img src="@item.ImageUrl" alt="image" />
                                        </td>
                                        <td>@item.TeamId</td>
                                        <td>@item.PersonName</td>
                                        <td>@item.Title</td>
                                        <td><a href="/Team/DeleteTeamMember/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Team/EditTeamMember/@item.TeamId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>UYARI!</strong> Kayıtlı personel bulunamamıştır.
                        </div>
                        <div class="alert alert-warning">
                            <strong>UYARI!</strong> Lütfen personel girişi yapınız.
                        </div>
                    }
                </div>
                <br />
                <a href="/Team/AddTeamMember" class="btn btn-outline-info">Yeni Ekip Girişi</a>
            </div>
        </div>
    </div>
