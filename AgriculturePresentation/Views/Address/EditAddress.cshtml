@model AgricultureEntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AddressId)
                <div class="form-group">
                    <label for="Name">Açıklama1</label>
                    <span asp-validation-for="Description1" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adres Açıklaması" asp-for="Description1">
                </div>
                <br />
                <div class="form-group">
                    <label for="Name">Açıklama2</label>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İl/İlçe" asp-for="Description2">
                </div>
                <br />
                <div class="form-group">
                    <label for="Name">Açıklama3</label>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Posta Kodu" asp-for="Description3">
                </div>
                <br />
                <div class="form-group">
                    <label for="Name">Açıklama4</label>
                    <span asp-validation-for="Description4" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Numara" asp-for="Description4">
                </div>
                <br />
                <div class="form-group">
                    <label for="Name">Harita Bilgisi</label>
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Harita Bilgisi" asp-for="MapInfo">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>